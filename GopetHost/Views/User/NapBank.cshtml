@model System.Collections.Generic.IEnumerable<BankQRModel>
@{
    ViewData["Title"] = "Nạp bằng ATM";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="grid">
    @foreach (var item in Model)
    {
        switch (item.BankModel.Type)
        {
            case BankModel.BankType.BANK:
                {
                    <div class="box cell" style="text-align: center;">
                        <header>
                            <h3 class="title is-5">Nạp tự động ngân hàng</h3>
                        </header>
                        <main>
                            <p>Tên tài khoản: @item.BankModel.Name</p>
                            <p>Số tài khoản: @item.BankModel.BankId</p>
                            <p><img width="112px" height="112px" src="@item.BankModel.Logo" /></p>
                            <p>Nội dung nạp: @item.NapContent</p>
                            <p><img width="170px" height="170px" src="@item.QRCode" /></p>
                        </main>
                    </div>
                }
                break;
            case BankModel.BankType.MOMO:
                {
                    <div class="box cell" style="text-align: center;">
                        <header>
                            <h3 class="title is-5">Nạp tự động Momo</h3>
                        </header>
                        <main>
                            <p>Tên tài khoản: @item.BankModel.Name</p>
                            <p>Số tài khoản: @item.BankModel.BankId</p>
                            <p><img width="112px" height="112px" src="@item.BankModel.Logo" /></p>
                            <p>Nội dung nạp: @item.NapContent</p>
                            <p><img width="170px" height="170px" src="@item.QRCode" /></p>
                        </main>
                    </div>
                }
                break;
        }
    }
</div>